<div class="row">
  <div class="col-lg-12">
    <h1>顧客一覧</h1>
    <%= search_form_for @q do |f| %>
      <%= f.label :family_name, "姓" %>
      <%= f.search_field :family_name_cont %>
      <%= f.submit "検索" %>
    <% end %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>姓</th>
          <th>名</th>
          <th>会社名</th>
          <th>電子メール</th>
          <th>リンク</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.family_name %></td>
          <td><%= customer.given_name %></td>
          <td><%= customer.company.name %></td>
          <td><%= customer.email %></td>
          <td><%= link_to 'show', customer, class: "btn btn-default" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
  </div>
</div>
